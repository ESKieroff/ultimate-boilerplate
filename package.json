{
  "name": "ultimate-boilerplate",
  "author": "ESKieroff",
  "description": "A boilerplate for projects using TypeScript, React, Node.js, Prisma, and more.",
  "version": "1.1.0",
  "main": "index.js",
  "license": "MIT",
  "keywords": [
    "typescript",
    "react",
    "node",
    "prisma",
    "boilerplate"
  ],
  "repository": {
    "type": "git",
    "url": "git+https://github.com/ESKieroff/ultimate-boilerplate"
  },
  "bugs": {
    "url": "https://github.com/ESKieroff/ultimate-boilerplate"
  },
  "homepage": "https://github.com/ESKieroff/ultimate-boilerplate",
  "scripts": {
    "dev": "tsup src/index.ts --watch --onSuccess \"env-cmd -f .env tsx watch src/index.ts\"",
    "build": "tsup src/index.ts --dts --minify --legacy --format cjs --out-dir dist",
    "start": "env-cmd -f .env node dist/index.js",
    "test": "vitest",
    "lint": "eslint src --max-warnings=0",
    "prettier": "npx prettier --write --ignore-unknown .",
    "format": "prettier --write .",
    "prisma": "npx prisma",
    "prepare": "husky install",
    "release": "release-it"
  },
  "husky": {
    "hooks": {
      "pre-commit": "npx lint-staged"
    }
  },
  "lint-staged": {
    "src/**/*.{ts,tsx}": [
      "npx pretty-quick --staged",
      "yarn lint"
    ]
  },
  "devDependencies": {
    "@types/bcrypt": "^5.0.2",
    "@types/express": "^4.17.21",
    "@types/node": "^20.12.8",
    "@types/react": "^18.3.1",
    "@types/swagger-jsdoc": "^6.0.4",
    "@types/swagger-ui-express": "^4.1.6",
    "@typescript-eslint/eslint-plugin": "^7.8.0",
    "@typescript-eslint/parser": "^7.8.0",
    "dotenv": "^16.4.5",
    "env-cmd": "^10.1.0",
    "eslint": "^9.2.0",
    "eslint-config-prettier": "^9.1.0",
    "eslint-config-standard": "^17.1.0",
    "eslint-plugin-prettier": "^5.1.3",
    "html-webpack-plugin": "^5.6.0",
    "husky": "^9.0.11",
    "lint-staged": "^15.2.2",
    "prettier": "npm:@btmills/prettier",
    "pretty-quick": "^4.0.0",
    "prisma-erd-generator": "^1.11.2",
    "react-refresh": "^0.14.2",
    "tsup": "^8.0.2",
    "typescript": "^5.4.5",
    "vitest": "^1.6.0",
    "webpack": "^5.91.0",
    "webpack-cli": "^5.1.4",
    "webpack-dev-server": "^5.0.4"
  },
  "dependencies": {
    "@commitlint/cli": "^19.3.0",
    "@commitlint/config-conventional": "^19.2.2",
    "@prisma/client": "^5.13.0",
    "@release-it/conventional-changelog": "^8.0.1",
    "bcrypt": "^5.1.1",
    "body-parser": "^1.20.2",
    "cors": "^2.8.5",
    "date-fns": "^3.6.0",
    "date-fns-tz": "^3.1.3",
    "dayjs": "^1.11.11",
    "ejs": "^3.1.10",
    "express": "^4.19.2",
    "global": "^4.4.0",
    "mongodb": "^6.6.0",
    "mongoose": "^8.3.3",
    "openapi-types": ">=7",
    "pg": "^8.11.5",
    "pino": "^9.0.0",
    "pino-pretty": "^11.0.0",
    "prisma": "^5.13.0",
    "react": "^18.3.1",
    "release-it": "^17.2.1",
    "swagger-jsdoc": "^6.2.8",
    "swagger-ui-express": "^5.0.0",
    "tsx": "^4.9.0",
    "zod": "^3.23.6"
  },
  "release-it": {
    "git": {
      "tagName": "v${version}",
      "commitMessage": "chore(release): ${version}",
      "requireCleanWorkingDir": true,
      "requireBranch": "main"
    },
    "github": {
      "release": true
    },
    "npm": {
      "publish": false
    },
    "plugins": {
      "@release-it/conventional-changelog": {
        "infile": "CHANGELOG.md",
        "preset": {
          "name": "conventionalcommits",
          "types": [
            {
              "type": "feat",
              "section": "Features"
            },
            {
              "type": "fix",
              "section": "Bug Fixes"
            },
            {
              "type": "chore",
              "section": "Chores"
            },
            {
              "type": "docs",
              "section": "Documentation"
            },
            {
              "type": "style",
              "section": "Styles"
            },
            {
              "type": "refactor",
              "section": "Refactors"
            },
            {
              "type": "perf",
              "section": "Performance Improvements"
            },
            {
              "type": "test",
              "section": "Tests"
            }
          ]
        }
      }
    }
  }
}
